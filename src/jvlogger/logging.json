{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s - [%(name)s] - %(levelname)s - %(message)s"
    },
    "colored": {
      "()": "jvlogger.formatters.ColoredFormatter",
      "format": "%(asctime)s - [%(name)s] - %(levelname)s - %(message)s"
    },
    "json": {
      "()": "jvlogger.formatters.JsonFormatter"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "colored",
      "stream": "ext://sys.stdout"
    },
    "text_file": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "DEBUG",
      "formatter": "standard",
      "filename": "APP_NAME.log",
      "when": "midnight",
      "backupCount": 7,
      "encoding": "utf-8"
    },
    "json_file": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "APP_NAME.json",
      "when": "midnight",
      "backupCount": 7,
      "encoding": "utf-8"
    }
  },
  "loggers": {
    "APP_LOGGER": {
      "level": "DEBUG",
      "handlers": [
        "console",
        "text_file",
        "json_file"
      ],
      "propagate": false
    }
  }
}